<p id="notice"><%= notice %></p>

<div class="md-form active-cyan-2 mt-4">
  <input class="form-control" type="text" placeholder="Search" aria-label="Search">
</div>

<div class="d-flex">


  <div class="container-fluid">

    <div class="card secondary mt-4 ml-4 bg-light">

      <div class="card-header"><%= "ID: #{@user.id}" %>

      </div>

        <div class="card-body text-secondary">

          <div>
            <h5 class="card-title"><%= "#{@user.first_name}" %></h5>
          </div>

          <div>
            <p><%= "#{@user.last_name}" %></p>
          </div>

          <div>
            <p><%= "CPF: #{@user.cpf}" %></p>
          </div>

          <div>
            <p><%= "Email: #{@user.email}" %></p>
          </div>

          <br>

          <%= link_to 'Peça acesso a seus dados pessoais', new_user_requisition_path(current_user), class: "btn btn-outline-primary" %>

        </div>

    </div>

  </div>



  <div class="container">



  <br>

    <left><h4>Requisições realizadas:</h4></left>

      <% @requisitions.each do |requisition| %>

        <br>

          <div class="d-flex">

            <div class="card-fluid1">

                  <div class="card secondary text-secondary bg-light">

                    <div class="card-header" >
                      <h5><%= "#{requisition.field_name}" %></h5>
                    </div>

                    <div class="ml-3 mt-3 mr-2" >
                      <h5>Solicitação:</h5>
                      <p><%= "#{requisition.new_value}" %><p>
                    </div>

                    <div class="ml-3 mr-2" >
                      <p><%= "Justificativa: #{requisition.justification}" %><p>
                    </div>

                    <div class="ml-3 mr-2" >
                      <p><%= "Dado pessoal será excluído ? #{requisition.excluded}" %><p>
                    </div>

                    <hr class="style1">

                    <div class="ml-3 mt-3 mr-2" >
                      <h5>Resposta do Gestor:</h5>
                      <br>
                      <p><%= "Veja qual é o tratamento dos seus dados pessoais:" %><p>
                    </div>

                    <div class="ml-3 mr-2" >
                      <p><%= "Veja quem tem acesso aos seus dados pessoais:" %><p>
                    </div>

                    <br>

                  </div>
            </div>

            <div class="card-fluid2 mr-1">
              <div class="card border-gray text-secondary bg-light ml-4">
                <div class="card-header" >
                  <center><h6>Status</h6></center>
                </div>
                <button type="button" class="btn btn-primary m-2">
                <%= "#{requisition.status}" %>
                  <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"></path>
                  </svg>
                </button>

                <div class="d-flex">

                   <%= render "buttons" if current_user.datum_admin %>

                  <button type="button" class="btn btn-light m-2">
                  Mostrar
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"></path>
                    <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"></path>
                    </svg>
                  </button>

                </div>
              </div>
            </div>
          </div>
      <% end %>

    <br>
  </div>
</div>
















