        <div class="my-3" >
          <h2><%= "ID: #{@user.id}" %></h2>
        </div>

        <div class="my-3" >
          <h2><%= "Nome: #{@user.first_name}" %></h2>
        </div>

        <div class="my-3" >
          <h2><%= "Sobrenome: #{@user.last_name}" %></h2>
        </div>

        <div class="my-3" >
          <h2><%= "CPF: #{@user.cpf}" %></h2>
