<p id="notice"><%= notice %></p>

<div class="d-flex">

  <div class="teste">

      <div class="my-3" >
        <h2><%= "ID: #{@user.id}" %></h2>
      </div>

      <div class="my-3" >
        <h2><%= "Nome: #{@user.first_name}" %></h2>
      </div>

      <div class="my-3" >
        <h2><%= "Sobrenome: #{@user.last_name}" %></h2>
      </div>

      <div class="my-3" >
        <h2><%= "CPF: #{@user.cpf}" %></h2>
      </div>

      <div class="my-3" >
        <h2><%= "Email: #{@user.email}" %></h2>
      </div>

  </div>

  <div class="container">

    <div class="cards">

      <% @personal_data.each do |personal_datum| %>

        <br>

        <div id="teste">

          <div class="mt-3 my-3 pt-2" >
            <p><%= "Onde está o dado: #{personal_datum.datum_font}" %></p>
          </div>

          <div class="my-3" >
            <p><%= "Informações disponíveis: #{personal_datum.datum_information}" %><p>
          </div>

          <div class="my-3" >
            <p><%= "Quem tem acesso ao dado: #{personal_datum.datum_access}" %><p>
          </div>

        </div>

      <% end %>

    </div>
    <% render "users/index" %>
  </div>

</div>
















