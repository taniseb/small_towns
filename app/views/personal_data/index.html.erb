<p id="notice"><%= notice %></p>

<div class="d-flex">

  <div class="container-fluid">
    <div class="card secondary mt-4 ml-4 bg-light">
      <div class="card-header"><%= "ID: #{@user.id}" %></div>
        <div class="card-body text-secondary">
          <div>
          <h5 class="card-title"><%= "#{@user.first_name}" %></h5>
          </div>
          <div>
            <p><%= "#{@user.last_name}" %></p>
          </div>
          <div>
            <p><%= "CPF: #{@user.cpf}" %></p>
          </div>
          <div>
            <p><%= "Email: #{@user.email}" %></p>
          </div>
        </div>  
    </div>
  </div> 


  <div class="container">

  <div class="md-form active-cyan-2 mt-4">
  <input class="form-control" type="text" placeholder="Search" aria-label="Search">
  </div>

  <br>

    <left><h4>Dados Disponíveis:</h4></left>

      <% @personal_data.each do |personal_datum| %>

        <br>

          <div class="d-flex">

            <div class="card-fluid1">

                  <div class="card secondary text-secondary bg-light">
                  
                    <div class="card-header" >
                      <h5><%= "#{personal_datum.datum_font}" %></h5>
                    </div>

                    <div class="ml-3 mt-3 mr-2" >
                      <p><%= "Informações disponíveis: #{personal_datum.datum_information}" %><p>
                    </div>

                    <div class="ml-3 mr-2" >
                      <p><%= "Quem tem acesso ao dado: #{personal_datum.datum_access}" %><p>
                    </div>

                    <br>

                  </div>

            </div>      

            <div class="card-fluid2 mr-1 mt-4">
              <div class="card border-white text-secondary bg-white ml-4">
              <button type="button" class="btn btn-light m-2">
              Mostrar
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"></path>
              <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"></path>
              </svg>
              </button>
              <button type="button" class="btn btn-light m-2">
              Editar
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
              <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
              </svg>
              </button>
              <button type="button" class="btn btn-primary m-2">
              Em Andamento
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"></path>
              </svg>
              </button>
              </div>
            </div>  

          </div>     

      <% end %>

    <br>
 
    <% render "users/index" %>

  </div>

</div>
















